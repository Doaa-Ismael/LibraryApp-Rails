<h1>Edit book</h1>

<%= form_for @book, :url => {:action => 'update', :id => @book} do %>
  <p><label for = "book_title">Title</label>:

    <%= text_field 'book', 'title', { class: 'form-control'} %></p>
  <p><label for = "book_price">Price</label>:

    <%= text_field 'book', 'price', class: 'form-control' %></p>
  <p><label for = "book_subject_id">Subject</label>:

    <%= collection_select(:book, :subject_id, @subjects, :id, :name, {} , class: 'custom-select' ) %></p>
  <p><label for = "book_description">Description</label><br/>

    <%= text_area 'book', 'description', class: 'form-control' %></p>
  <%= submit_tag "Create", class: 'btn btn-primary'%>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
